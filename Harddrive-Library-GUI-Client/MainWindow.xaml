                                </TabControl.ItemTemplate>

                                <TabControl.ContentTemplate>
                                    <DataTemplate>
                                        <UI:HDSLEditor ShowAdvancedMode="{Binding ElementName=showAdvancedUI, Path=IsChecked}" 
                                                       DataContext="{Binding}" />
                                    </DataTemplate>
                                </TabControl.ContentTemplate>
                            </TabControl>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>-->
            </Grid>
        </Grid>

        <StatusBar Grid.Row="4">sdfsdf</StatusBar>
    </Grid>
</Window>
